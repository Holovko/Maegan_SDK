<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    >

  <Button
      android:id="@+id/btn_list"
      android:layout_width="@dimen/button_width"
      android:layout_height="wrap_content"
      android:text="List restaurants"
      />

  <Button
      android:id="@+id/btn_detail"
      android:layout_width="@dimen/button_width"
      android:layout_height="wrap_content"
      android:text="Detail restaurant"
      />

  <Button
      android:id="@+id/btn_restaurant_menu"
      android:layout_width="@dimen/button_width"
      android:layout_height="wrap_content"
      android:text="Show Restaurant Menu "
      />

  <Button
      android:id="@+id/btn_edit_prepared_order"
      android:layout_width="@dimen/button_width"
      android:layout_height="wrap_content"
      android:text="Edit order"
      />

  <Button
      android:id="@+id/btn_restaurant_receipt"
      android:layout_width="@dimen/button_width"
      android:layout_height="wrap_content"
      android:text="Open order Receipt "
      />

  <Button
      android:id="@+id/btn_one"
      android:layout_width="@dimen/button_width"
      android:layout_height="wrap_content"
      android:text="List with one brand"
      />

  <Button
      android:id="@+id/btn_order_history"
      android:layout_width="@dimen/button_width"
      android:layout_height="wrap_content"

      android:text="Order history"
      />

  <Button
      android:id="@+id/btn_credit_card"
      android:layout_width="@dimen/button_width"
      android:layout_height="wrap_content"
      android:text="credit_card"
      />

  <Button
      android:id="@+id/btn_cards"
      android:layout_width="@dimen/button_width"
      android:layout_height="wrap_content"
      android:text="Cards"
      />

  <Button
      android:id="@+id/btn_barcode"
      android:layout_width="@dimen/button_width"
      android:layout_height="wrap_content"
      android:text="Barcode"
      />
</LinearLayout>
</ScrollView>